{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "auto-imports.d.ts", "components.d.ts"],
  "exclude": ["node_modules", "build/**/*"],
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowJs": true,
    "outDir": "build",
    "ignoreDeprecations": "5.0"
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
